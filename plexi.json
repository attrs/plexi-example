{
	"preferences": {
		"plexi.tomcat": {
			"env": {
				"JAVA_OPTS": "-Djava.awt.headless=true -XX:+UseConcMarkSweepGC -server -XX:MaxPermSize=384m"
			},
			"port": 29090
		},
		"plexi.workbench": {			
			"workbenches": {
				"admin": {
					"docbase": "www.admin",
					"mount": {
						"path": "/"
					}
				}
			}
		},
		"_plexi.http": {
			"listeners": [
				{
					"port": 9443
				}
			],
			"servers": {
				"front": {
					"host": ["127.0.0.1", "localhost"],
					"port": 9000,
					"docbase": {
						"127.0.0.1": "www",
						"localhost": "www"
					},
					"statuspage": true,
					"logging": {
						"access": ":date - :method :status :url :remote-addr [:res[content-length] :referrer :user-agent :response-time ms]",
						"error": ":date - :method :status :url :remote-addr [:res[content-length] :referrer :user-agent :response-time ms]",
						"console": true,
						"stack": true,
						"web": true
					},
					"compress": true,
					"charset": "utf8",
					"session": {
						"type": "default",
						"resave": true,
						"saveUninitialized": true,
						"secret": "tlzmflt"
					},
					"mount": {
						"./bower_components": "/bower"
					},
					"filter": {
						"**/*.do": "tomcat"
					},
					"mappings": "*"
				},
				"admin": {
					"host": "localhost",
					"port": 9443,
					"docbase": "www.admin"
				}
			}
		}
	}
}